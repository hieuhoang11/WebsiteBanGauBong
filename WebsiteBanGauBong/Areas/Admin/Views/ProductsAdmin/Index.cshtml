@using PagedList;
@using PagedList.Mvc;
@model PagedList<WebsiteBanGauBong.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("Thêm Mới", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>      
            <span>Loại</span>
        </th>
        <th>
            <span>Tên</span>
        </th>
        <th>
            <span>Mã</span>
        </th>
        <th>
            <span>Ảnh</span>
        </th>      
        <th>
            <span>Giá</span>
        </th>
        <th>
            <span>Giảm Giá(%)</span>
        </th>
        <th>
            <span>Số Lượng</span>
        </th>
        <th>
            <span>Mô Tả</span>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Images)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromotionPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amounts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ProductId }) |
            @Html.ActionLink("Chi Tiết", "ChiTiet", new { id=item.ProductId }) |
            @Html.ActionLink("Xóa", "Xoa", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
<div style="clear:both;width:80%;margin:auto;text-align:right;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>