@using PagedList;
@using PagedList.Mvc;
@model PagedList<WebsiteBanGauBong.Entities.HoaDon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Tất cả</h2>

<table class="table">
    <tr>
        <th>
            <span>Tên Sản Phẩm</span>
        </th>
        <th>
            <span>Tên Khách Hàng</span>
        </th>
        <th>
            <span>SĐT</span>
        </th>
        <th>
            <span>Ghi Chú</span>
        </th>
        <th>
            <span>Ngày Lập</span>
        </th>
        <th>
            <span>Số Lượng</span>
        </th>
        <th>
            <span>Xử Lý</span>
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenKhach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ghiChu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XuLy)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaHoaDon }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.MaHoaDon }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHoaDon })
        </td>
    </tr>
}

</table>
<div style="clear:both;width:80%;margin:auto;text-align:right;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>